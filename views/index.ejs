<!DOCTYPE html>
<html lang="he">

<head>
  <meta charset="UTF-8" />
  <title>Tasks Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<body class="p-4">
  <div class="container">
    <h1 class="mb-4">Task Manager</h1>

    <form id="addTaskForm" class="mb-3">
      <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Enter a new task" required />
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
    <div class="mb-3">
      <button class="btn btn-outline-primary filter-btn" data-filter="all">All</button>
      <button class="btn btn-outline-success filter-btn" data-filter="completed">Completed</button>
      <button class="btn btn-outline-warning filter-btn" data-filter="not_completed">Not Completed</button>
    </div>
    <h1 class="mb-4">Tasks List</h1>

    <ul class="list-group">
      <% tasks.forEach(task=> { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>
            <%= task.name %>
              <% if (task.completed) { %> ‚úÖ <% } %>
          </span>
          <div>
            <button class="btn btn-sm btn-secondary edit-btn" data-id="<%= task.id %>">
              ‚úèÔ∏è
            </button>
            <button class="btn btn-sm btn-success toggle-btn" data-id="<%= task.id %>">
              ‚úîÔ∏è
            </button>
            <button class="btn btn-sm btn-danger delete-btn" data-id="<%= task.id %>">
              üóëÔ∏è
            </button>
          </div>
        </li>
        <% }) %>
    </ul>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $("#addTaskForm").on("submit", function (e) {
      e.preventDefault();

      $.post("/tasks", $(this).serialize(), function () {
        location.reload();
      });
    });
  </script>
  <script>
    $(".toggle-btn").on("click", function () {
      const id = $(this).data("id");

      $.post(`/tasks/${id}/toggle`, function () {
        location.reload();
      });
    });
  </script>
  <script>
    $(".delete-btn").on("click", function () {
      const id = $(this).data("id");

      $.ajax({
        url: `/tasks/${id}`,
        type: "DELETE",
        success: function () {
          location.reload();
        },
      });
    });
  </script>
  <script>
    $(".edit-btn").on("click", function () {
      const id = $(this).data("id");
      const currentName = $(this)
        .closest("li")
        .find("span")
        .text()
        .trim()
        .replace("‚úÖ", "")
        .trim();

      $(this).closest("li").find("span").html(`
      <input type="text" class="form-control edit-input" value="${currentName}" />
    `);

      $(".edit-input").on("keypress", function (e) {
        if (e.which === 13) {
          const newName = $(this).val();

          $.ajax({
            url: `/tasks/${id}`,
            type: "PUT",
            data: { name: newName },
            success: function () {
              location.reload();
            },
          });
        }
      });
    });
  </script>
  <script>
    $('.filter-btn').on('click', function () {
      const filter = $(this).data('filter');
      window.location.href = `/?filter=${filter}`;
    });
  </script>
</body>

</html>